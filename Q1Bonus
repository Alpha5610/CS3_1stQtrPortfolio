<body>
    <h1>Guess My Word! >.<</h1>
    <p id="wordDisplay"></p>
    <input type="text" id="userInput" maxlength="1">
    <button onclick="checkGuess()">Guess</button>
    <p id="message"></p>

    <script>
        let secretWord = ["a", "w", "e", "s", "o", "m", "e"];
        let guessedWord = ["-", "-", "-", "-", "-", "-", "-"];

        document.getElementById("wordDisplay").textContent = guessedWord.join(" ");

        function checkGuess() {
            let guess = document.getElementById("userInput").value.toLowerCase(); // Get user input
            let correct = false;

            if (guess.length !== 1) {
                document.getElementById("message").textContent = "Please enter a single letter.";
                return;
            }

            for (let i = 0; i < secretWord.length; i++) {
                if (secretWord[i] === guess) {
                    guessedWord[i] = guess; // Replace dash with guessed letter
                    correct = true;
                }
            }

            document.getElementById("wordDisplay").textContent = guessedWord.join(" ");

            document.getElementById("message").textContent = correct ? "✅ Correct!" : "❌ Try again.";
            document.getElementById("userInput").value = ""; // Clear input field
        }
    </script>
</body>
</html>
